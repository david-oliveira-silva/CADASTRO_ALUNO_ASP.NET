@model ViewModel

@{
	ViewData["Title"] = "Deletar Aluno";
}

@if (TempData["Erro"] != null)
{
<p class="alert alert-danger">@TempData["Erro"]</p>
}

<div class="Deletar bg-light rounded-3 p-5">

    <h1 class="text-center">
        Deletar Cidade
    </h1>
    <h3 class="text-center  ">Dejesa deletar a cidade com as informações abaixo?</h3>
    <form asp-controller="Aluno" asp-action="DeletarAluno" method="post">
        <input type="hidden" asp-for="Aluno.matricula" />
      
        <div class="mb-3">

            <label asp-for="Aluno.matricula" class="form-label">Matrícula</label>
            <input type="number" class="form-control" asp-for="Aluno.matricula" id="matricula" disabled>

        </div>
        <div class="mb-3">
     
            <label asp-for="Aluno.nome" class="form-label">Nome</label>
            <input type="text" class="form-control" asp-for="Aluno.nome" id="nome"  disabled>

        </div>

        <div class="mb-3">

            <label asp-for="Aluno.CPF" class="form-label">CPF</label>
            <input type="text" class="form-control" asp-for="Aluno.CPF" id="CPF" disabled>

        </div>

       

        <div class="mb-3">

            <label asp-for="Aluno.sexo" class="form-label">Sexo</label>
            <input type="text" class="form-control" asp-for="Aluno.sexo" id="Sexo" disabled>

        </div>

        <div class="mb-3">

            <label asp-for="Aluno.dtNascimento" class="form-label">Data de Nascimento</label>
            <input type="date" class="form-control" asp-for="Aluno.dtNascimento" id="dtNascimento" disabled>

        </div>

        <div class="mb-3">

            <label asp-for="Aluno.cidade" class="form-label">Cidade</label>
            <input type="text" class="form-control" asp-for="Aluno.cidade.cidadeNome" id="cidadeNome" disabled>

        </div>

        <div class="Botoes d-flex gap-2 justify-content-center mt-4 ">

            <button type="submit" class="btn btn-danger w-25">Confirmar</button>

            <a asp-controller="Aluno" asp-action="ListarAlunos" class="btn btn-primary w-25">Voltar</a>
        </div>
    </form>
</div>
